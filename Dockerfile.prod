# Production Dockerfile optimized for Cloud Run
FROM node:23-alpine AS base

# 1. Dependências
FROM base AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci --only=production && npm cache clean --force

# 2. Build
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .
RUN npm run build:prod

# 3. Runner
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
# Aumentamos para 1.5GB para dar estabilidade em 2GB de RAM total
ENV NODE_OPTIONS="--max-old-space-size=1536 --expose-gc"
ENV PORT=8080

# Segurança: utilizador não-root
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

COPY --from=builder /app/dist ./dist
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

# REMOVEMOS O HEALTHCHECK DAQUI. O Cloud Run trata disso via porta 8080.

USER nextjs
EXPOSE 8080

CMD ["node", "dist/index.js"]